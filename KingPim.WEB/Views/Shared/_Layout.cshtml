<body>
    <nav class="main-menu navbar navbar-expand-lg navbar-dark bg-dark">
        <!--<a class="navbar-brand" href="/"><span class="login">KING<span>PIM</span></span></a>-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">                
                <li>
                    <a class="nav-link" href="/"><span class="login">KING<span>PIM</span></span></a>
                </li>
                @if (ViewContext.HttpContext.User.IsInRole("Administrator") || ViewContext.HttpContext.User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Users">Users</a>
                    </li>
                }
                 
                @if (ViewContext.HttpContext.User.IsInRole("Administrator") || ViewContext.HttpContext.User.IsInRole("SuperAdmin") || ViewContext.HttpContext.User.IsInRole("Publisher"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Attributes" asp-action="Attributes">Attributes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Catalog" asp-action="Catalog">Categories</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                </li>
                @if (ViewContext.HttpContext.User.IsInRole("Administrator") || ViewContext.HttpContext.User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Export" asp-action="Index">Export</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - KingPim</p>
        </footer>
    </div>

